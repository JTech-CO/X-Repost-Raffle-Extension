{
  "manifest_version": 3,
  "name": "X Reposts Raffle",
  "version": "1.1.0",
  "description": "Collect retweeters on X and run on-page sorting & raffle. No server required.",
  "icons": {
    "16": "icons/XRT16.png",
    "48": "icons/XRT48.png",
    "128": "icons/XRT128.png"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*/status/*/retweets*",
        "https://twitter.com/*/status/*/retweets*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "X Reposts Raffle"
  }
}

// 패치 노트 내역
// 1.0.0 = 확장 프로그램 제작
// 1.0.1 = 사소한 UI 수정
// 1.0.2 = 사소한 버그 수정
// 1.1.0 = 중앙 재게시 컬럼에서만 인식하도록 수정
